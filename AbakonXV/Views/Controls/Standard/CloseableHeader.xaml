<UserControl x:Class="AbakonXVWPF.Views.Controls.Standard.CloseableHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AbakonXVWPF.Views.Controls.Standard"
             mc:Ignorable="d" 
             d:DesignHeight="23" d:DesignWidth="81" Margin="0">
    <Grid>
        <Grid >
            <Button Content="X"  Height="19" HorizontalAlignment="Right"  Name="button_close" VerticalAlignment="Top" Width="20" FontFamily="Courier" FontWeight="Bold"  FontStretch="Normal" Visibility="Visible" FontSize="14" Padding="0" ToolTip="Close"/>
            <TextBlock Text="TabItem"  Height="23" HorizontalAlignment="Left" Margin="0,1,10,1" Name="label_TabTitle" VerticalAlignment="Center" FontFamily="Courier" FontSize="12" />
        </Grid>
    </Grid>
</UserControl>
